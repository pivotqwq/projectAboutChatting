{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "YOUR_JWT_SECRET_KEY_HERE",
    "Issuer": "ApiGateway",
    "Audience": "Microservices"
  },
  "Services": {
    "UserManager": "http://localhost:8081",
    "ForumManager": "http://localhost:8082",
    "ChatService": "http://localhost:8083",
    "MatchingService": "http://localhost:8084"
  },
  "RateLimit": {
    "RequestsPerMinute": 100,
    "BurstLimit": 10
  },
  "ReverseProxy": {
    "Routes": {
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/users/{**catch-all}" }
        ]
      },
      "forum-route": {
        "ClusterId": "forum-cluster",
        "Match": {
          "Path": "/api/forum/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/forum/{**catch-all}" }
        ]
      },
      "chat-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/api/chat/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/chat/{**catch-all}" }
        ]
      },
      "matching-route": {
        "ClusterId": "matching-cluster",
        "Match": {
          "Path": "/api/matching/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/matching/{**catch-all}" }
        ]
      },
      "aggregation-route": {
        "ClusterId": "aggregation-cluster",
        "Match": {
          "Path": "/api/aggregated/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8081/"
          }
        }
      },
      "forum-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8082/"
          }
        }
      },
      "chat-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8083/"
          }
        }
      },
      "matching-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8084/"
          }
        }
      },
      "aggregation-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5000/"
          }
        }
      }
    }
  }
}
